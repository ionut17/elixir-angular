section.content-container
  // Define scope title to be used by the header
  .row
    .col-md-12
      .page-title-wrapper
        .page-title-item
          h2.h2-sm
            a(ui-sref='activities.list') Activities 
            | >
          h2.h2-sm(ng-hide="activities.typeAll")
            a(ui-sref='activities.sublist({type: activities.type, activity_id: null})') {{activities.type}} 
            | >
          h2
            a(ui-sref='activities.sublist({type: activities.type, activity_id: activities.activityId})') {{title}}
  .row
    .col-md-12
      .table-wrapper
        table.table.elixir-table
          thead
            tr
              th #
              th Type
              th Student
              th(ng-show="table.showGrades") Grade
              th Name
              th Course
              th Date
          tbody
            tr(ng-repeat='activity in activities track by $index', ui-sref='activities.view({type: activities.type, activity_id: activity.activity.id, user_id: activity.student.id})')
              th.col-sm-1(scope='row') {{$index+1}}
              td
                span.tag(ng-class='activity.tag') {{activity.activity.type.name}}
              td.td-bold {{activity.student.firstName + ' ' + activity.student.lastName}}
              td(ng-show="table.showGrades")
                span.tag.tag-auto.tag-grade {{activity.value}}
              td {{activity.activity.name}}
              td.td-blue {{activity.activity.course.title}}
              td.td-blue {{activity.activity.date}}
