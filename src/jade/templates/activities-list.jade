section.container-title
  // Header
  .row
    .col-md-12
      .page-title-wrapper
          h2 {{title}}
          button.ebutton.green-button(data-toggle='modal', data-target='#add-user-modal') Add Activity
  .row.container-title-nav
    .col-md-12
      .page-title-wrapper
        ul.tabs-wrapper
          li(ui-sref='base.activities.list({type: null})', ng-class='{active: activities.type=="activities"}') All Activities
          li(ui-sref='base.activities.list({type: "attendances"})', ng-class='{active: activities.type=="attendances"}') Attendances
          li(ui-sref='base.activities.list({type: "grades"})', ng-class='{active: activities.type=="grades"}') Grades
          li(ui-sref='base.activities.list({type: "files"})', ng-class='{active: activities.type=="files"}') Files

section.container-content
  .row
    .col-md-12
      .table-wrapper
        .table-title
          include elements/pagination
          include elements/search-bar
        table.table.elixir-table
          thead
            tr
              th #
              th Type
              th(ng-hide="activities.singleType") Role
              th Name
              th User
              th Course
              th Date
          tbody
            tr(ng-repeat='activity in activities track by $index', ui-sref='base.activities.view({type: activity.role+"s", activity_id: activity.activity.id, user_id: activity.user.id})')
              th.col-sm-1(scope='row') {{pager.defaultPageSize*pager.currentPage+$index+1}}
              td
                span.tag(ng-class='activity.tag') {{activity.activity.type.name}}
              td(ng-hide="activities.singleType")
                span.tag(ng-class='activity.roleTag') {{activity.role}}
              td {{activity.activity.name}}
              td.td-bold {{activity.user.firstName + ' ' + activity.user.lastName}}
              td.td-blue {{activity.activity.course.title}}
              td.td-blue {{activity.activity.date}}
            tr.disable-hover(ng-if='!activities.length')
              td.td-disabled.text-center(colspan='6') No results have been found
