div(ui-view='')
section.login-wrapper
  section.col-lg-4.col-md-7.col-sm-9.col-xs-12.university-wrapper.hide
    figure.university-logo
  section.login-box.col-lg-4.col-md-7.col-sm-9.col-xs-12(ng-class="{'loading-state': form.loading}")
    section.left-box
      figure.logo
      h2 Elixir
      h3 Management
    section.right-box
      div.preloader-wrapper(ng-show="form.loading")
        figure.preloader
        h4 Autentificare
      form.eform(ng-submit="form.submit()" ng-hide="form.loading")
        section.eform-group
          label.error(ng-repeat="error in form.errors") {{error}}
        section.eform-group
          label.elabel(for='email') Email
          input.einput(ng-model="form.email" type='email' name='email' placeholder="Enter email" required)
        section.eform-group
          label.elabel(for='password') Password
          input.einput(ng-model="form.password" type='password' name='password' placeholder="Enter password" required)
        button(type='submit').ebutton.login-button Login
  section.col-lg-4.col-md-7.col-sm-9.col-xs-12.university-wrapper
    p Proiect realizat pentru Facultatea de Informatica, Iasi  

include elements/notifications
